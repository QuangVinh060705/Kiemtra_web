@model Kiemtra_web.Models.Hang_hoa

<h2>Sửa Hàng Hóa</h2>

<form method="post" action="@Url.Action("Edit", "HangHoaMVC", new { id = Model.MaHangHoa })">
    <div>
        <label for="TenHangHoa">Tên Hàng Hóa:</label>
        <input type="text" id="TenHangHoa" name="TenHangHoa" value="@Model.TenHangHoa" required />
    </div>

    <div>
        <label for="GhiChu">Ghi Chú:</label>
        <input type="text" id="GhiChu" name="GhiChu" value="@Model.ghi_chu" />
    </div>

    <button type="submit">Cập Nhật</button>
</form>

<a href="@Url.Action("Details", "HangHoaMVC", new { id = Model.MaHangHoa })">Quay lại chi tiết</a>
